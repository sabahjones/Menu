<div class="container-fluid menu_partials">
  <h3><%="#{@sides.category}"%></h3>
  <div class="container-fluid row no-gutters">
    <% @sides.foods.each do |side| %>
    <div class="col-3"><%=side.name%></div>
    <div class="col-6"><%=side.description%></div>
    <div class="col-2"><%=number_to_currency(side.price)%></div>
    <div class="col-1 container row no-gutters">
      <% if @user%>
        <% if @user.admin %> <!--Admin below -->
            <div class="col-6 no-gutters">
              <form action="/foods/<%=side.id%>/edit" method="get">
              <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
              <input type="submit" class="btn btn-primary btn-sm" value="edit">
              </form>
            </div>
            <div class="col-6 no-gutters">
              <form action="/foods/<%=side.id%>" method="post">
              <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
              <input type="hidden" value="delete" name="_method">
              <input type="submit" class="btn btn-danger btn-sm" value="delete">
              </form>
            </div>
          <%end%><!-- @user.admin -->
      <%end%><!-- @user -->
    </div>
    <div class="w-100"></div>
  <%end%><!-- end @sides.foods loop -->
</div>
</div>
