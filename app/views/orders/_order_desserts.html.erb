<div class="container"><h3><%="#{@desserts.category}s"%></h3>
  <div class="row no-gutters">
    <% @desserts.foods.each do |dessert| %>
    <div class="col-3"><%=dessert.name%></div>
    <div class="col-6"><%=dessert.description%></div>
    <div class="col-2"><%=number_to_currency(dessert.price)%></div>
    <div class="col-1">
      <form action="/orders" method="post">
      <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
      <input type="hidden" value="<%=dessert.id%>" name="food_id">
      <input type="submit" class="btn btn-primary btn-sm" value="order">
      </form>
    </div>
    <div class="w-100"></div>
  <%end%><!-- end @desserts.foods loop -->
</div>
</div>
<br>
